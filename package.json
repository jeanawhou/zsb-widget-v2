{
  "name": "zsb-widget-v2",
  "private": false,
  "version": "2.0.5-alpha.4",
  "type": "module",
  "license": "MIT",
  "homepage": "https://www.npmjs.com/package/zsb-widget-v2",
  "repository": {
    "url": "https://git.zeroshotbot.com/ZeroShotBot/zeroshotbot_widget_v2"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm version patch --force && npm run build:library && npm run build:vanillajs",
    "build:test": "npm run build:test-library && npm run build:vanillajs",
    "build:test-library": "vite build --mode library && npm pack",
    "build:library": "vite build --mode library && npm run publish:production",
    "build:vanillajs": "vite build --mode vanillajs",
    "lint": "eslint --fix",
    "preview": "vite preview",
    "prepare": "husky",
    "publish:production": "npm publish --userconfig .npmrc",
    "test": "npm run lint"
  },
  "files": [
    "dist"
  ],
  "main": "dist/zsbv6.umd.cjs",
  "module": "dist/zsbv6.js",
  "exports": {
    ".": {
      "import": "./dist/zsbv6.js",
      "require": "./dist/zsbv6.umd.cjs"
    }
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@fingerprintjs/fingerprintjs": "^3.3.5",
    "antd": "^5.9.2",
    "axios": "^1.6.2",
    "crypto-js": "^4.2.0",
    "dompurify": "^3.0.6",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use-websocket": "^4.5.0",
    "reselect": "^4.1.8",
    "styled-components": "^6.0.8",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-legacy": "^4.1.1",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^9.0.7",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "semantic-release": "^23.0.2",
    "terser": "^5.27.0",
    "vite": "^4.4.5"
  },
  "browser": {
    "crypto": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
